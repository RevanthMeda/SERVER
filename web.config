<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    
    <!-- Enable URL Rewrite -->
    <rewrite>
      <rules>
        <!-- Proxy all requests to Flask backend -->
        <rule name="Flask Backend" stopProcessing="true">
          <match url="(.*)" />
          <conditions logicalGrouping="MatchAll" trackAllCaptures="false" />
          <action type="Rewrite" url="http://127.0.0.1:5000/{R:1}" 
                  appendQueryString="true" 
                  logRewrittenUrl="true" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_PROTO" value="https" />
            <set name="HTTP_X_FORWARDED_FOR" value="{REMOTE_ADDR}" />
            <set name="HTTP_X_ORIGINAL_HOST" value="{HTTP_HOST}" />
          </serverVariables>
        </rule>
      </rules>
    </rewrite>

    <!-- Error handling -->
    <httpErrors errorMode="Custom" defaultResponseMode="File">
      <remove statusCode="500" />
      <error statusCode="500" 
             responseMode="File" 
             path="500.html" />
    </httpErrors>

    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>

    <!-- Disable compression for rewrite rules -->
    <urlCompression doDynamicCompression="false" doStaticCompression="false" />
    <httpCompression>
      <dynamicTypes>
        <clear />
      </dynamicTypes>
      <staticTypes>
        <clear />
      </staticTypes>
    </httpCompression>

  </system.webServer>
</configuration>