modules = ["web", "python-3.12", "nodejs-20"]
run = "python app.py"

[nix]
channel = "stable-25_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "sqlite-interactive", "tcl", "tk", "xcodebuild", "zlib"]

[deployment]
run = ["sh", "-c", "python app.py"]

[workflows]
runButton = "Restart and Run"

[[workflows.workflow]]
name = "Run Flask App"
author = 43227527
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c \"import os; os.system('pkill -f python')\" 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[[workflows.workflow]]
name = "Restart and Run"
author = 46377391
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -c \"import os; os.system('pkill -f python')\" 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[[ports]]
localPort = 5000
externalPort = 80
